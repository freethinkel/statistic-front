{
  "rules": {
      "class-name": true,
      "indent": [
          true,
          "spaces"
      ],
      "interface-name": [
          true,
          "always-prefix"
      ],
      "no-conditional-assignment": true,
      "no-console": [
          true,
          "log",
          "error",
          "debug"
      ],
      "no-debugger": true,
      "no-duplicate-variable": true,
      "no-unused-expression": false,
      "no-eval": true,
      "no-string-literal": true,
      "no-switch-case-fall-through": true,
      "no-trailing-whitespace": true,
      "no-unsafe-finally": true,
      "switch-default": true,
      "typedef": [
          true,
          "call-signature",
          "property-declaration"
      ],
      "one-line": [
          true,
          "check-open-brace",
          "check-whitespace"
      ],
      "quotemark": [
          true,
          "single",
          "double",
          "avoid-escape"
      ],
      "semicolon": [
          true,
          "always"
      ],
      "typedef-whitespace": [
          true,
          {
              "call-signature": "nospace",
              "index-signature": "nospace",
              "parameter": "nospace",
              "property-declaration": "nospace",
              "variable-declaration": "nospace"
          }
      ],
      "variable-name": [
          true,
          "ban-keywords"
      ],
      "whitespace": [
          true,
          "check-branch",
          "check-decl",
          "check-operator",
          "check-separator",
          "check-type"
      ]
  },
  "extends": ["tslint:recommended", "tslint-sonarts"]
}
