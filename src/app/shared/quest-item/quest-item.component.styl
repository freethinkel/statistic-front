@import '~assets/colors';

.index
	position absolute
	top 7px
	left 7px
	&-btn 
		display block
		width 50px
		padding-top 100%
		position relative
		border-radius 7px
		transition 0.3s
		&:hover
			box-shadow 0 0 0 2px $primary


.passed
	background-color rgba($primary, 0.2)
	border 1px solid rgba($primary, 0.7)	
	&:hover
		box-shadow 0 0 0 2px rgba($primary, 0.2)
.not-passed
	background-color rgba($dark, 0.2)
	border 1px solid rgba($dark, 0.7)
	&:hover
		box-shadow 0 0 0 2px rgba($dark, 0.2)


.overlay 
	position fixed
	background-color rgba(#000, 0.4)
	top 0
	bottom 0
	left 0
	right 0
	z-index 90
	

.quest-content 
	background-color #fff
	box-shadow 0 10px 20px -50px rgba(#000, 0.5)
	padding 10px 15px
	max-width 900px
	margin 0 auto
	border-radius 10px
	max-height 80vh
	overflow auto

.modal-quest-info-wrapper 
	position fixed
	top 50px
	display block
	left 0
	width 100%
	z-index 100

.title 
	font-size 40px
	margin-bottom 20px

.description 
	font-size 15px
	line-height 1.4
	margin-bottom 10px

.solution
	height 30px
	border none
	background-color $primary
	color #ffffff
	border-radius 10em
	outline none
	padding 0 15px
	font-size 13px
	box-shadow 0 4px 15px -1px rgba($primary, 0.4)
	&::placeholder 
		color #fff
		font-size 13px
		opacity 0.7
	&-wrapper
		display flex
		justify-content flex-end

.link
	color $primary
	text-decoration underline
	font-size 13px
	&-title
		color darken($dark, 30%)
		font-weight bold
		font-size 14px

.quest
	&-type
		background-color rgba($primary, 0.2)
		color $primary
		border-radius 10em
		height 20px
		font-size 13px
		line-height 20px
		padding 0 10px
	&-header 
		display flex 
		justify-content space-between
		align-items flex-start