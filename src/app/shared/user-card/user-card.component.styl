@import '~assets/colors.styl'

.user
  position relative
  z-index 1
  &-open
    z-index 10
  &-wrapper
    box-shadow 0 2px 5px -1px rgba(#000, 0.3)
    padding 10px
    padding-right: 45px
    border-radius 10px
    display flex
    justify-content space-between
    transition 0.3s
    background-color: #fff
    &:hover
      box-shadow 0 5px 15px -4px rgba(0,0,0,0.35)
  &-description-data
    overflow hidden
    height 0
    background-color: rgba($primary, 0.9)
    height 
    border-radius: 10px
    padding-top: 22px
    padding-right: 10px
    padding-left: 10px
    padding-bottom: 10px
    box-sizing: border-box
    z-index -1
    margin-top: -20px
    width 100%
    color #fff
    position: absolute
    border-radius: 10px
    &-open
      height auto
    &-header
      margin-top: 10px
      display: flex
      justify-content: space-between
      align-items: center
    &-footer
      display: flex
      justify-content: flex-end


.open-btn
  position: absolute
  top: 10px
  right 10px 
  background-color: $primary
  height 20px
  width 20px
  color #ffffff
  display: block
  border-radius: 10em
  text-align: center
  font-size 6px
  line-height: 20px
  transform: rotate(0deg)
  transition: 0.3s
  &-active
    transform: rotate(180deg)

.title
  color #fff
.date
  color $primary
  background-color: #ffffff
  border-radius: 10em
  padding: 0 5px
  font-size 12px
  height 16px
  line-height: 16px
  font-weight 900

ul
  list-style-type decimal
  margin: 5px 0 0
  padding-left: 20px
  li
    color #fff
    font-size 13px
    font-weight 200
    line-height: 1.6

.delete-btn
  background-color: #ffffff
  color #000
  border-radius: 10em
  height 20px
  line-height: 20px
  padding: 0 15px
  font-size 13px