@import '~assets/colors'

.container
	padding-top 50px

.main-wrapper 
	margin-top -50px
	height: 100vh
	position relative
	padding-top 50px
	box-sizing border-box
	overflow hidden
	&::after
		content ''
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		background-image: url('/assets/icons/chart.svg')
		background-size cover
		background-position bottom center
		background-repeat no-repeat
		z-index -2
.btn-wrapper
	display flex
	position absolute
	top calc(50% - 18px)
	justify-content center
	width 100%
h1
	margin 0
.work-btn
	height 36px
	line-height 36px
	padding 0 16px
	background-color #ff
	color: $primary
	border-radius 10px
	box-shadow 0 4px 7px -4px rgba(0,0,0,.2)
	transition 0.3s all
	font-weight bold
	&:hover 
		box-shadow 0 5px 10px -4px rgba(0,0,0,.2)

.rock-wrapper 
	padding-top 100%
	display flex
	justify-content center 
	align-items center
	position relative
	transition 0.3s
	&::before
		content ''
		top 0
		bottom 0
		right 0
		left 0
		border-radius 50%
		position absolute
		background-color $primary
		background-size contain
		background-position center 
		background-repeat no-repeat
		transition 0.3s
		z-index -1
	&:hover:before
		transform scale(15)
		opacity 0.7

.vert-center
	display flex
	flex-direction column
	justify-content center
	height 100%
	position relative
	z-index -1