/* You can add global styles to this file, and also import other style files */
@import '~assets/fonts.styl';
@import '~assets/colors.styl';
*
	font-family "Google"
	color $dark
h1, h2, h3, h4, h5, h6 
	color $primary

body 
	margin 0
	min-height: 100vh
	background-color: $background
.container
	max-width: 960px
	margin 0 auto
	display flex
	justify-content space-between

.l8
	width 66.66%
.l7
	width: 58.33%;
.l5
	width 41.66%
.l4
	width 33.33%
.btn
	border none
	background-color unset
	font-size 12px
	cursor pointer
	outline none
.link
	text-decoration none
	display inline-block
	cursor pointer
.vert-center
	display flex
	flex-direction column
	justify-content center
	height 100%

p 
	line-height 1.6
	font-size 16px


.loader 
	height 10px
	width 10px
	border-radius 10em
	border 3px solid $primary
	position relative
	display inline-block
	margin-bottom -3px
	&::before
		content ''
		position absolute
		top -4px
		bottom -4px
		left -4px
		right 5px
		border-radius 15px 0 0 15px
		background-color $background
		transform-origin: 9px;
		animation loader 0.5s linear 0s infinite
	&:after
		content ''
		position absolute


.loader-wrapper
	color $dark
	font-size 12px
	text-align center
	margin-top 24px

@keyframes loader 
	from 
		transform rotate(0deg)
	to
		transform rotate(360deg)